# GitHub Personal Access Token (required for accessing GitHub API)
GITHUB_TOKEN=your_github_personal_access_token

# OpenAI API Key (required for AI-based analysis)
OPENAI_API_KEY=your_openai_api_key

# Cache expiration time in minutes (default: 120 minutes)
CACHE_EXPIRATION_MINUTES=120

# Enable debug mode (true/false)
DEBUG=false

# Number of lines to include as source code context in PR comments (default: 3)
SOURCE_CODE_LINES_OFFSET=3

# Logging level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
